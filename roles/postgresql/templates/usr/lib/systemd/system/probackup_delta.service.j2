[Unit]
Description=PGPro Incremental Backup
After={{ pg_base.service }}.service
Requisite={{ pg_base.service }}.service

[Service]
Type=oneshot
ExecStart={{ pg_base.prefix }}/bin/pg_probackup backup -B {{ pg_base.backup }} --instance main -b DELTA --stream
User={{ pg_base.user }}
Group={{ pg_base.group }}
